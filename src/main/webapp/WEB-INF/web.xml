<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee"
         version="3.0">

        <servlet>
        <servlet-name>com.liul85.tw.Default</servlet-name>
        <servlet-class>com.liul85.tw.Default</servlet-class>
        </servlet>

        <servlet-mapping>
        <servlet-name>com.liul85.tw.Default</servlet-name>
        <url-pattern>/</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>index</servlet-name>
            <servlet-class>com.liul85.tw.demo.Index</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>index</servlet-name>
            <url-pattern>/index</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>signin</servlet-name>
            <servlet-class>com.liul85.tw.demo.Signin</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>signin</servlet-name>
            <url-pattern>/signin</url-pattern>
        </servlet-mapping>

        <servlet-mapping>
            <servlet-name>default</servlet-name>
            <url-pattern>*.html</url-pattern>
        </servlet-mapping>
</web-app>
